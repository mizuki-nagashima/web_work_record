# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing how to use dependency injection
# GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
# GET     /message                    controllers.AsyncController.message

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file                         controllers.Assets.versioned(path="/public", file: Asset)

GET     /                                      controllers.AuthCtl.index()
POST    /login                                 controllers.AuthCtl.login()
GET     /logout                                controllers.AuthCtl.logout()

POST     /attendance/save                      controllers.AttendanceCtl.save(empNo: String, monthsYears: String)
POST     /attendance/statusAndWorkSave         controllers.AttendanceCtl.statusAndWorkSave()
GET     /attendance/:year/:month               controllers.AttendanceCtl.index(year: String, month: String)
GET     /attendance/getPerformanceTime/:start/:end/:holidayClass/:deduction   controllers.AttendanceCtl.getPerformanceTime(start: String, end: String, holidayClass: String, deduction: String)
GET     /attendance/moveTargetYearMonth/:empNo/:yearMonth/:nowYearMonth       controllers.AttendanceCtl.moveTargetYearMonth(empNo: String, yearMonth: String, nowYearMonth: String)
GET     /attendance/getNightWork/get/:end      controllers.AttendanceCtl.getNightWork(end: String)
GET     /attendance/getSalaried/get/:code      controllers.AttendanceCtl.getSalaried(code: String)
GET     /attendance/getDivisionList/get/:departmentCode      controllers.AttendanceCtl.getDivisionList(departmentCode: String)
GET     /attendance/fix/:empNo/:yearMonth      controllers.AttendanceCtl.fix(empNo: String, yearMonth: String)
GET     /attendancePdf/:year/:month/:pdfKind   controllers.AttendancePdfCtl.index(year: String, month: String, pdfKind: Int)

GET		/approve	controllers.ApproveCtl.index()
GET		/approve/updateApprove	controllers.ApproveCtl.updateApprove()
GET		/approve/updateNotApprove/:perStatus controllers.ApproveCtl.updateNotApprove(perStatus: String)

GET		/overtimeList	controllers.OvertimeListCtl.index()
GET		/outputPdf	controllers.OutputPdfCtl.outputPdf()
